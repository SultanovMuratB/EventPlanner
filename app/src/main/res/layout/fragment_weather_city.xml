<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.WeatherCityFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/city_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/temp_current_day"
        tools:text = "Ростов-на-Дону"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/temp_current_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/current_temp"
        tools:text = "Температура на сегодня"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/current_temp"
        android:background="@drawable/shape_rectangle"
        android:textColor="@color/black"
        tools:text = "24 C"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/temp_forecast_days"
        app:layout_constraintTop_toBottomOf="@+id/temp_current_day"
        android:layout_margin="16dp"
        style="@style/QuestionTextStyle"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/temp_forecast_days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_temp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text = "Температура на 3 дня"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/temp_one_day"
        android:background="@drawable/shape_rectangle"
        android:textColor="@color/black"
        tools:text = "24 C"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/temp_two_day"
        app:layout_constraintTop_toBottomOf="@+id/temp_forecast_days"
        android:layout_margin="16dp"
        style="@style/QuestionTextStyle"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/temp_two_day"
        android:background="@drawable/shape_rectangle"
        android:textColor="@color/black"
        tools:text = "24 C"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/temp_one_day"
        app:layout_constraintEnd_toStartOf="@+id/temp_three_day"
        app:layout_constraintTop_toBottomOf="@+id/temp_forecast_days"
        android:layout_margin="16dp"
        style="@style/QuestionTextStyle"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/temp_three_day"
        android:background="@drawable/shape_rectangle"
        android:textColor="@color/black"
        tools:text = "24 C"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/temp_two_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_forecast_days"
        android:layout_margin="16dp"
        style="@style/QuestionTextStyle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>